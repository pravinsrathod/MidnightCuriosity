rules_version = "2";
service firebase.storage {
  match /b/{bucket}/o {
    
    // Avatars: Public Read, Owner Write
    match /avatars/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Student Homework Submissions
    // Structure: homework/{tenantId}/{homeworkId}/{uid}_{timestamp}.jpg
    match /homework/{tenantId}/{homeworkId}/{filename} {
      allow read: if request.auth != null;
      // Ensure the filename starts with the uploader's UID to prevent overwriting others
      allow write: if request.auth != null && filename.matches(request.auth.uid + '_.*');
    }

    // General Fallback
    // Covers: homework_feedback (Teachers), content (Lectures), etc.
    // Note: To secure 'homework_feedback' strictly to Admins, Custom Claims would be required.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
